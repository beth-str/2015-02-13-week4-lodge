<h2>Edit the guest information:</p>
<form action="/admin/guest/edit_confirm" method="post">
  <p>First Name:<br>
  <input type="text" required value="<%= @form_values.first_name %>" name="first_name"></p>

  <p>Last Name:<br>
  <input type="text" required value="<%= @form_values.last_name %>" name="last_name"></p>

  <p>Age:<br>
  <input type="text" required value="<%= @form_values.age %>" name="age"></p>

  <p>Gender:<br>
        <select name="gender">
        	<option <%= "selected" if @form_values.gender == "female" %> value="female">female</option>
        	<option <%= "selected" if @form_values.gender == "male" %> value="male">male</option>
        </select></p>

  <p>Reservation ID:<br>
  <input type="number" required value="<%= @form_values.reservation_id %>" name="reservation_id"></p>

  <input type="hidden" required value="<%= @form_values.id %>" name="id">
  <input type="submit" value="Save Edits">
</form>
